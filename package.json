{
  "name": "util-helpers",
  "version": "3.9.2",
  "description": "一个基于业务场景的工具方法库",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "types": "types/index.d.ts",
  "scripts": {
    "test": "mocha --require @babel/register --recursive",
    "test:math": "mocha --require @babel/register --recursive test/math",
    "test:type": "mocha --require @babel/register --recursive test/type",
    "test:validator": "mocha --require @babel/register --recursive test/validator",
    "test:processor": "mocha --require @babel/register --recursive test/processor",
    "build": "npm run build:lib && npm run build:dist && npm run build:esm",
    "build:lib": "rm -rf lib && cross-env MODULE_TYPE=cjs babel src --out-dir lib",
    "build:esm": "rm -rf esm && cross-env MODULE_TYPE=esm babel src --out-dir esm",
    "build:dist": "rm -rf dist && npm run build:dist-production && npm run build:dist-development",
    "build:dist-production": "cross-env MODULE_TYPE=umd NODE_ENV=production webpack --mode=production",
    "build:dist-development": "cross-env MODULE_TYPE=umd webpack --mode=development",
    "build:lib-development": "rm -rf lib && babel src --out-dir lib --source-maps inline",
    "build:doc": "npm run doc",
    "doc": "rm -rf docs && jsdoc -c conf.json",
    "commit": "cz",
    "pub": "npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doly-dev/util-helpers.git"
  },
  "files": [
    "esm",
    "lib",
    "dist"
  ],
  "keywords": [
    "util",
    "helpers",
    "util-helpers",
    "business",
    "business-util",
    "biz-util"
  ],
  "author": "caijf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doly-dev/util-helpers/issues"
  },
  "homepage": "https://doly-dev.github.io/util-helpers/index.html",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "docdash": "^1.2.0",
    "husky": "^4.3.6",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.2",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0"
  }
}

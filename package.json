{
  "name": "util-helpers",
  "version": "1.1.1",
  "description": "一个基于业务场景的工具方法库",
  "main": "lib/index.js",
  "scripts": {
    "test": "npx mocha --require @babel/register --recursive",
    "test:type": "npx mocha --require @babel/register --recursive test/type",
    "test:validator": "npx mocha --require @babel/register --recursive test/validator",
    "test:processor": "npx mocha --require @babel/register --recursive test/processor",
    "build": "npm run build:lib && rm -rf dist &&  npm run build:dist && npm run build:dist-development",
    "build:lib": "rm -rf lib && npx babel src --out-dir lib",
    "build:dist": "npx webpack --mode=production",
    "build:dist-development": "npx webpack --mode=development",
    "build:lib-development": "rm -rf lib && npx babel src --out-dir lib --source-maps inline",
    "doc": "rm -rf docs && npx jsdoc -c conf.json src/ README.md -d docs -r",
    "pub": "npm run build && npm run generate && npm publish",
    "generate": "node generate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doly-dev/util-helpers.git"
  },
  "keywords": [
    "util",
    "business-util",
    "business-helpers",
    "util-helpers"
  ],
  "author": "caijf",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doly-dev/util-helpers/issues"
  },
  "homepage": "https://doly-dev.github.io/util-helpers/index.html",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-modules-umd": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "docdash": "^1.1.1",
    "jsdoc": "^3.6.2",
    "minimist": "^1.2.0",
    "mocha": "^6.1.4",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "browsers": [
              "> 1%",
              "last 4 versions",
              "Firefox ESR",
              "not ie < 9"
            ]
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/transform-modules-umd",
        {
          "globals": {
            "index": "utilHelpers"
          },
          "exactGlobals": true
        }
      ]
    ]
  }
}